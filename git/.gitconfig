[user]
	email = yashin.alexander.42@gmail.com
	name = Alexander Yashin
[alias]
	lg = log --pretty=format:'%C(bold blue)%h%Creset - %s %Cgreen(%cr)%Creset %C(bold blue)%aE%Creset'
	co = checkout
	br = branch 
	ci = commit
	st = status 
[core]
	editor = vim
	excludesfile = ~/.gitignore
[push]
	default = simple
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[init]
	templatedir = ~/.git-templates
	defaultBranch = master
